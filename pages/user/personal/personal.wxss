/* pages/user/personal/personal.wxss */

page {
  background: #f5f5f5;
}

.basic {
  height: 350rpx;
  background: #fff;
}

.basic .info {
  width: 350rpx;
  height: 100%;
  float: left;
}

.basic .info .name {
  font-size: 50rpx;
  font-weight: 550;
  text-indent: 20rpx;
  margin-top: 100rpx;
}

.basic .info .tips {
  margin-top: 10rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
  color: #666;
}

.basic .headImg {
  width: 200rpx;
  height: 100%;
  float: right;
}

.basic .headImg image {
  margin-top: 120rpx;
  height: 150rpx;
  width: 150rpx;
  border-radius: 150rpx;
}

.options{
  min-height: 30rpx;
  margin-top: 20rpx;
}
.gap{
  margin-top: 20rpx;
}
.list{
  background: #fff;
  height: 100rpx;
  overflow: hidden;
  border: 1px solid #f5f5f5;
}
.list .icon{
  float: left;
  width: 50rpx;
  height: 50rpx;
  margin-top: 25rpx;
  margin-left: 20rpx;
}

.list .text{
  float: left;
  width: 300rpx;
  line-height: 100rpx;
  margin-left: 30rpx;
}

.list .skip{
  float: right;
  width: 35rpx;
  height: 50rpx;
  margin-top: 25rpx;
  margin-right: 20rpx;
}

.quit{
  line-height: 100rpx;
  text-align: center;
  margin-top: 100rpx;
  background: #fff;
  height: 100rpx;
  overflow: hidden;
  border: 1px solid #f5f5f5;
  color: #666;
}